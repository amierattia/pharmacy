<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pharmacy.Pages.orderUpdate">
    <VerticalStackLayout Spacing="20">
        <Frame BackgroundColor="#f3f6fb">
            <Entry Keyboard="Numeric" x:Name="Id" Placeholder="Enter Id Again" Background="#f3f6fb"/>
        </Frame>
        <Frame BackgroundColor="#f3f6fb">
            <Entry  x:Name="Name" Placeholder="Enter Name" Background="#f3f6fb"/>
        </Frame>
        <Frame BackgroundColor="#f3f6fb">
            <Entry Keyboard="Numeric" x:Name="Salary" Placeholder="Enter Salary" Background="#f3f6fb"/>
        </Frame>
        <Frame BackgroundColor="#f3f6fb">
            <Entry Keyboard="Numeric" x:Name="Quantity" Placeholder="Enter Quantity" Background="#f3f6fb"/>
        </Frame>
        <Button Text="Save" x:Name="EditeD" Clicked="EditeD_Clicked"    />
        <ScrollView x:Name="Uodate">
            
        </ScrollView>
    </VerticalStackLayout>
</ContentView>
