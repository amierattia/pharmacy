<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pharmacy.Pages.Store">
    <ScrollView>
    <VerticalStackLayout Spacing="20">
        <VerticalStackLayout Background="#f3f6fb">
            <Label Text="Returns " FontSize="Large" HorizontalOptions="Center" Margin="0,0,0,20"/>
        </VerticalStackLayout>
            <VerticalStackLayout Padding="20" Spacing="20">
                <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                    <Frame BackgroundColor="#f3f6fb">
                        <Entry x:Name="Name"  WidthRequest="100" Placeholder="name" BackgroundColor="#f3f6fb"/>
                    </Frame>
                    <Frame BackgroundColor="#f3f6fb">
                        <Entry Keyboard="Numeric" x:Name="Qu" WidthRequest="100" Placeholder="Quantity " BackgroundColor="#f3f6fb"/>
                    </Frame>
                </HorizontalStackLayout>
                <Button BackgroundColor="#416bfd" Text="Add" FontSize="Medium" x:Name="Add" Clicked="Add_Clicked"/>
                <Button BackgroundColor="#416bfd" Text="Get All" FontSize="Medium" x:Name="Get" Clicked="Get_Clicked"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>